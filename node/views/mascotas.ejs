<%- include("templates/cabecera", {tituloinicio: titulo}) %>

<div class="container">
  <h1 class="text-primary">Titulo de mi sitio web Mascotas</h1>
  <h2><%= titulo %></h2>

  <h3 class="my-2">CRUD MONGODB</h3>
  <a class="btn btn-success btn-block my-4" href="/mascotas/crear"
    >Crear nueva mascota</a
  >

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nombre</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Acci√≥n</th>
      </tr>
    </thead>
    <tbody>
      <% if (arrayMascotas.length > 0) { %> <% arrayMascotas.forEach(el => { %>
      <tr>
        <th scope="row"><%= el.id %></th>
        <td><%= el.nombre %></td>
        <td><%= el.descripcion %></td>
        <td>
          <a href="/mascotas/<%= el.id %>" class="btn btn-warning btn-sm"
            >Ver detalle</a
          >
        </td>
      </tr>
      <% }) %> <% } %>
    </tbody>
  </table>
</div>
<%- include("templates/footer") %>
